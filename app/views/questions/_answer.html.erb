<div class="row">
  <div class="span11">
    <% @question.answers.each do |answer| %>
    <div class="span6">
      <%= answer.body %>
    </div>
    <div class="span3">
      <% if current_user?(answer.user) %>
        <%= link_to raw('<i class="icon-edit"></i> Edit'), edit_answer_path(answer), class: "btn btn-small" %>
        <%= link_to raw('<i class="icon-trash"></i> Delete'), @answer, method: :delete,
                data: { confirm: "You sure?" }, class: "btn btn-small btn-danger" %>
      <% end %>
    </div>
    
    <div class="span3 offset6">
      <%= time_ago_in_words answer.created_at %> ago by <%= link_to answer.user.name, answer.user %>
    </div>
    <div class="row">
      <div class="span10">
        <hr>
      </div>
    </div>
    <% end %>
    <% if signed_in? %>
      <%= render partial: 'answers/answer' %>
    <% end %>
  </div>
</div>

