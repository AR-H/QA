<div class="row">
<div class="span8 offset1">
  <p><%= t('.comments') %> (<%= @question.comments.size %>)</p>
  <small>
    <% @question.comments.each do |comment| %>
    <p><%= comment.body %><br>
    <%= time_ago_in_words comment.created_at %> <%= t('.ago') %> <%= t('.by') %>
     <%= link_to comment.user.name, comment.user %></p>
      <div class="row">
        <div class="span9">
          <hr>
        </div>
      </div>
      <% end %>
    <%= render partial: 'comments/form' %>  
  </small>
</div>
</div>
<div class="span11">
  <hr>
</div>
