<% @questions.each do |question| %>
  <% if question.answers.count == 0 %>
    <div class="question-summary">
        <div>
          <div class="votes">
            <div class="mini-counts"><%= pluralize question.reputation_for(:votes).to_i, "vote" %></div>
            
          </div>
          <div class="status unanswerd">
            <div class="mini-counts"><%= question.answers.count %></div>
            <div>answers</div>
          </div>
          <div class="views">
            <div class="mini-counts"><%= question.visit.total_visits rescue 0 %></div>
            <div>Views</div>
          </div>
        </div>
        <div class="summary">
          <h3><%= link_to question.title, question_path(question) %></h3>
          <div class="tags">
            <%= raw question.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ') %>
          </div>
          <span class="started"><%= time_ago_in_words(question.created_at) %> ago | <%= question.user.name %></span>
        </div>
      </div>
  <% end %>
<% end %>
