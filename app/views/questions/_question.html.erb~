  <div class="span7">
    <p>
      <span class="space"><i class="icon-user"></i> <%= t('.by')%> 
      <%= link_to @question.user.name, @question.user %></a></span>
      <span class="space"><i class="icon-calendar"></i> <%= time_ago_in_words(@question.created_at) %> 
      <%= t('.ago')%></span>
      <span class="space"><i class="icon-comment"></i> <%= @question.comments.size %></span>
      <span class="space"><i class="icon-eye-open"></i> <%= @question.visit.total_visits rescue 0 %></span>
      <span class="space"><i class="icon-pencil"></i> <%= @question.answers.count %></span>
      
      <% if  @question.reputation_for(:votes).to_i >= 0 %>
        <span class="space"><i class="icon- icon-thumbs-up"></i>
        <%= pluralize @question.reputation_for(:votes).to_i, "" %>
      <% else %>
        <span class="space"><i class="icon- icon-thumbs-down"></i>
        <%= pluralize @question.reputation_for(:votes).to_i, "" %>
      <% end %>
      <% if current_user && !current_user.voted_for?(@question) %>
        | <%= link_to "up", vote_question_path(@question, type: "up"), method: "post" %>
        | <%= link_to "down", vote_question_path(@question, type: "down"), method: "post" %>
      <% end %> 
       
      
     </p>
  </div>
  <div class="span3 offset1">
    <% if current_user?(@question.user) %>
       <%= link_to t('.edit')%>, edit_question_path(@question), class: "btn btn-small" %> 
       <%= link_to t('.back')%>, questions_path, class: "btn btn-small" %>
       <%= link_to t('.delete')%>, @question, method: :delete,
                                  data: { confirm: "You sure?" }, class: "btn btn-small btn-danger" %>
    <% end %>
  </div>
</div>
