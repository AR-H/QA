<% provide(:title,)%>
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="span8">
        <p>
        Title:
                <%= @question.title %>
        <br/>
        Body:
                 <%= @question.body %>
        </p>
  </div>
  <%= @question.user.name %>
  | <%= pluralize @question.reputation_for(:votes).to_i, "vote" %>
  <% if current_user && !current_user.voted_for?(@question)%>
    | <%= link_to "up", vote_question_path(@question, type: "up"), method: "post" %>
    | <%= link_to "down", vote_question_path(@question, type: "down"), method: "post" %>
  <% end %>

</div>
<h5>Visits:</h5>
  <p><span class="gray">Total:</span><%= @question.visit.total_visits rescue 0 %></p>
<p>
  Tags: <%= raw @question.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ') %>
</p>
<p>
  answers: <%= @question.answers.count %>
</p>


<section class="comments">
    <h6>Comments(<%= @question.comments.size %>)</h6>
    <%= render partial: 'questions/comment', collection: @question.comments %>
    <%= render partial: 'comments/form' %>

</section>

<div>
  <h5>Answers:</h5>
       <% @question.answers.each do |answer| %>
         <%= answer.body %> <br/>
       <% end %>
  
</div><br/>


<%= link_to 'Edit', edit_question_path(@question), class: "btn btn-small btn-primary" %> 
<%= link_to 'Back', questions_path, class: "btn btn-small btn-primary" %> 


<%= render partial: 'answers/answer' %>





