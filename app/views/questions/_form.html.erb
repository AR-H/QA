<% provide(:title, 'New Question') %>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@question) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
  
        <%= f.label :title %>
        <%= f.text_field :title %>
  
        <%= f.label :body %>
        <%= f.text_area :body%>
        
        <%= f.label :tag_list %>
        <%= f.text_field :tag_list %><br/>
        
        
        <%= f.submit "Create Question", class: "btn btn-medium btn-primary" %>
    <% end %>
  </div>
</div>

