<div class="answers">
  <%= simple_form_for @answer do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
      
    <%=  hidden_field_tag :question_id, @answer.question.id %>
    
    <%= f.input :body, :input_html => { :class => "span4" }, placeholder: 'Your answer' %><br/>
    
    <%= f.submit 'Your answer' ,class: "btn btn-medium btn-primary" %>
    
  <% end %>
</div>


