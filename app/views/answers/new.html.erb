<% provide(:tilte, 'Edit Answer') %>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@answer) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
    
      <%= f.label :body %>
      <%= f.text_area :body %><br/>
    
      <%= f.submit 'Save', class: "btn btn-medium btn-primary" %>
    
    <% end %>
  </div>
</div>

<%= link_to 'Back', questions_path %>
