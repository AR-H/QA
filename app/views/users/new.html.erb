<% provide(:title,'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
    
      <%= f.input :name %>
		  		  
      <%= f.input :email %>
		  
      <%= f.input :password %>
			  
      <%= f.input :password_confirmation %><br/>
    
      <%= f.submit "Create my account", class: "btn btn-medium btn-primary" %>
    <% end %>
  </div>
</div>
