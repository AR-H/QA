<% provide(:title,'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span4 offset3 well">
    <%= simple_form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
    
      <%= f.input :name,:input_html => { :class => "span4" }, label: 'Your username please' %>
		  		  
      <%= f.input :email,:input_html => { :class => "span4" } %>
		  
      <%= f.input :password,:input_html => { :class => "span4" } %>
			  
      <%= f.input :password_confirmation,:input_html => { :class => "span4" } %><br/>
    
      <%= f.submit "Create my account", class: "btn btn-medium btn-primary" %>
    <% end %>
  </div>
</div>
